<Window x:Class="KasseApp.Views.BarcodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Barcode" Height="200" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="txtBarcodeInput" FontSize="20" Grid.Row="0"
                 VerticalContentAlignment="Center" />

        <TextBlock x:Name="txtBarcodeDisplay" Grid.Row="1" Margin="0,10,0,0"
                   TextAlignment="Center" FontSize="32" FontWeight="Bold" />
    </Grid>
</Window>